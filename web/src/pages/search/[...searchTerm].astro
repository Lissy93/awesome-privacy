	.results {
		margin: 0 auto 2rem auto;
		padding: 1rem;
		width: calc(100% - 2rem);
		max-width: 1100px;
		columns: 6 300px;
		column-gap: 1rem;
		.category {
			padding: 1rem;
			box-shadow: 4px 4px 0 var(--box-outline);
			background: var(--accent-fg);
			border: 2px solid var(--box-outline);
			border-radius: var(--curve-sm);
			display: inline-flex;
