    gap: 0.5rem;
    a {
      font-size: 1.2rem;
    }
    .follow-with {
      font-style: italic;
      opacity: 0.6;
    }
    @media(max-width: 768px) {
      flex-direction: column;
    }
  }
  
}

.breadcrumbs {
  opacity: 0.5;
  font-size: 0.8rem;
  position: absolute;
  right: 1rem;
  top: 1rem;
  a {
    color: var(--foreground);
    transition: all 0.15s ease-in-out;
    
    &:hover {
      color: var(--accent);
    }
